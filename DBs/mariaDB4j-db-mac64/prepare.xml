<?xml version="1.0"?>
<project name="MariaDB4J" default="extract" >
    <description>
        Ant task to download file from internet and extract during maven package
    </description>

    <target name="env">
        <echo message="Project path   : ${project.basedir}" />
        <echo message="Output location: ${project.build.directory}" />
        <echo message="Cache location : ${cacheDir}" />
        <echo message="MariaDB version: ${mariaDB.version}" />
        <mkdir dir="${cacheDir}" />
        <mkdir dir="${cacheDir}/input" />
    </target>

    <target name="download" depends="env" description="Download Mac file from bintray.com">
        <echo message="Downloading macOS MariaDB ${mariaDB.version} file..." />
        <get src="https://github.com/luigiberrettini/mariadb-source-builder/releases/download/v${mariaDB.version}/mariadb-${mariaDB.version}-macos.tar.gz"
             dest="${cacheDir}/input/mariadb-${mariaDB.version}-osx.tar.gz"
             skipexisting="true" />
        <available property="download.file" file="${cacheDir}/input/download_file"/>
    </target>

    <target name="rename" if="${download.file}" depends="download" description="Rename downloaded temporary file">
        <move file="${cacheDir}/input/download_file" tofile="${cacheDir}/input/mariadb-${mariaDB.version}-osx.tar.gz" />
    </target>

    <target name="extract" depends="env,download,rename" description="Extract project files">
        <echo message="Extracting tar.gz file..." />
        <untar src="${cacheDir}/input/mariadb-${mariaDB.version}-osx.tar.gz"
               dest="${project.build.directory}/mariadb-${mariaDB.version}-osx"
               compression="gzip">
        </untar>
        <echo message="Copying share folders and files..." />
        <copy todir="${project.build.directory}/generated-resources/mariadb-${mariaDB.version}/ch/vorburger/mariadb4j/mariadb/osx">
            <fileset dir="${project.build.directory}/mariadb-${mariaDB.version}-osx">
                <include name="share/**/*"/>
            </fileset>
        </copy>
        <echo message="Copying bin files..." />
        <copy todir="${project.build.directory}/generated-resources/mariadb-${mariaDB.version}/ch/vorburger/mariadb4j/mariadb/osx/bin">
            <fileset dir="${project.build.directory}/mariadb-${mariaDB.version}-osx/bin">
                <include name="my_print_defaults" />

                <include name="mariadb" />
                <include name="mariadbd" />
                <include name="mariadb-check" />
                <include name="mariadb-dump" />
                <include name="mariadb-install-db" />

                <include name="mysql" />
                <include name="mysqld" />
                <include name="mysqlcheck" />
                <include name="mysqldump" />
                <include name="mysql_install_db" />

                <include name="resolveip" />
            </fileset>
        </copy>
        <copy todir="${project.build.directory}/generated-resources/mariadb-${mariaDB.version}/ch/vorburger/mariadb4j/mariadb/osx/bin">
            <fileset dir="${project.build.directory}/mariadb-${mariaDB.version}-osx/scripts">
                <include name="*" />
            </fileset>
        </copy>
        <echo message="Updating chmod for bin files..." />
        <chmod dir="${project.build.directory}/generated-resources/mariadb-${mariaDB.version}/ch/vorburger/mariadb4j/mariadb/osx/bin" perm="ugo+rx" includes="*"/>
    </target>
</project>